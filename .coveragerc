# Coverage configuration for PlexAudioConverter state management system
# Strong test system coverage requirements per test plan

[run]
# Source code to measure
source = 
    state_management/
    core/

# Include patterns
include = 
    state_management/*
    core/*

# Exclude patterns
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */temp/*
    */build/*
    */dist/*
    */.git/*
    */venv/*
    */env/*
    setup.py
    conftest.py

# Branch coverage
branch = True

# Parallel processing
parallel = True

# Data file location
data_file = test_results/coverage/.coverage

[report]
# Reporting thresholds
precision = 2
show_missing = True
skip_covered = False
skip_empty = False

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about platform specific code
    if sys.platform
    if os.name
    
    # Don't complain about type checking imports
    if TYPE_CHECKING:
    
    # Don't complain about logging debug statements
    logger.debug
    log.debug

# Partial branch exclusions
partial_branches =
    # Don't complain if tests don't hit defensive branches
    pragma: no branch
    
    # Don't complain about platform specific branches
    if sys.platform
    if os.name
    
# Minimum coverage thresholds
fail_under = 85

[html]
# HTML report configuration
directory = test_results/coverage/html
title = PlexAudioConverter State Management Coverage
show_contexts = True

[xml]
# XML report for CI integration
output = test_results/coverage/coverage.xml

[json]
# JSON report for programmatic access
output = test_results/coverage/coverage.json
pretty_print = True
show_contexts = True